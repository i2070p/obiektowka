	if(kwota<0)
		{
			cout << "Podano niepoprawnÄ… kwote" << endl;
		}
	else
	if(kwota==0)
	{
		slownie="Zero";
	}

	else
	{
		Dostringa(kwota);
		wielkosc(kwota);
		
		if(mln){
			licznik=kwota_s.length()-6;
			licznik2=0;
			

		}
		



		
	}
	
	slownie = pisanie("114",114,slownik);

