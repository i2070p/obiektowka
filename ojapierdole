void Dostringa(int liczba){
	stringstream s;
	s << liczba;
	kwota_s=s.str();
	
	}

void wielkosc(long int kasa){

	int miliony = kasa/1000000;
	
	if(miliony>=1){
		mln=true;
		}
	int tysiace = kasa/1000;
	if(tysiace>=1){
		tys=true;
	}	
}

string pisanie(string _kwota_s, int _kwota, string slownik[5][10]){
	string napis;

	string kwota_s = _kwota_s;
	int kwota = _kwota;
	int n=0;

	switch (kwota_s.size())
	{
		case 1: 
			n=kwota_s[0];
			n-=48;
			napis += slownik[kwota_s.size()-1][n];
			napis += " ";
		break;
		case 2:
			n=kwota_s[1];
			n-=48;
			napis += slownik[4][n];
			napis += " ";
		break;
		case 3:
			if(kwota_s[1] != '1'){
				for(int i=0;i<kwota_s.size();i++){
					n=kwota_s[i];
					n-=48;
					napis += slownik[i+1][n];
				}
			}else{
								n=kwota_s[0];
				n-=48;
				napis += slownik[3][n];
				napis += " ";
				n=kwota_s[2];
				n-=48;
				napis += slownik[4][n];
			
			
							}
		break;
	default:
		break;
		return napis;
	}
}
 
string slownik[5][10] = {
	{""},
{"", "jeden","dwa","trzy","cztery","piec","szesc","siedem","osiem","dziewiec"},
{"", " dziesiec", " dwadziescia", " trzydziesci", " czterdziesci", " piecdziesiat", " szescdziesiat", " siedemdziesiat", " osiemdziesiat", " dziewiecdziesiat"},
{"", " sto", " dwiescie", " trzysta", " czterysta", " piecset", " szescset", " siedemset", " osiemset", " dziewiecset"},
{"dziesiec", " jedenascie", " dwanascie", " trzynascie", " czternascie", " pietnascie", " szesnascie", " siedemnascie", " osiemnascie", " dziewietnascie"},
};

const string koncowki[6] = {"", " tys.", " mln.", " mld.", " bln.", " bld."};


